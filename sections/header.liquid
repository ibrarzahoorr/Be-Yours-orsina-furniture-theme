          matchType = 'handle-match';
        }
      }
      
      if (matchScore > 0) {
        results.collections.push({
          ...collection,
          matchScore,
          matchType
        });
      }
    });
    
    // Sort by relevance
    results.products.sort((a, b) => {
      if (b.matchScore !== a.matchScore) {
        return b.matchScore - a.matchScore;
      }
      return a.title.localeCompare(b.title);
    });
    
    results.collections.sort((a, b) => {
      if (b.matchScore !== a.matchScore) {
        return b.matchScore - a.matchScore;
